<h1><%= @list.name %></h1>
<h2>My collection</h2>
<div class="d-flex">
  <%= link_to 'Add a movie', new_list_bookmark_path(@list), class: 'btn btn-warning' %>
  <%= link_to 'Back to lists', lists_path, class: 'btn btn-success' %>
</div>

<div class="row">
  <% @bookmarks.each do |bookmark| %>
    <div class="col-md-6 col-lg-4 col-xl-3">
      <div class="card">
        <img class="card-img-top" src="<%= Movie.find(bookmark.movie_id).poster_url %>" alt="Movie poster">
        <div class="card-body">
          <h5 class="card-title"><%= Movie.find(bookmark.movie_id).title %></h5>
          <p class="card-text"><%= Movie.find(bookmark.movie_id).overview %></p>
          <div class="d-flex justify-content-between align-items-center">
            <p><%= bookmark.comment %></p>
            <%= link_to 'delete', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'text-danger' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'Add a movie', new_list_bookmark_path(@list), class: 'btn btn-warning' %>
<%= link_to 'Back to lists', lists_path, class: 'btn btn-success' %>
